<nav>
   <div class='nav-wrapper' style='background-color: #676E95'>
      <a href='/' class='brand-logo'>Tech Blog</a>
      <ul id='nav-mobile' class='right hide-on-med-and-down'>
         {{#if logged_in}}
            <li><a href='/'>Home</a></li>
            <li><a href='/dashboard'>Dashboard</a></li>
            <li><a href='/logout'>Logout</a></li>
         {{else}}
            <li><a href='/'>Home</a></li>
            <li><a href='/dashboard'>Dashboard</a></li>
            <li><a href='/login'>Login</a></li>
         {{/if}}
      </ul>
   </div>
</nav>
<div class='container'>
   <div class='row'>
      <div class='col s12'>
         <div class='card' style='background-color: #717CB470'>
            <div class='card-content white-text'>
               <p class='right-align'>{{createdAt}}</p>
               <span class='card-title'>{{title}}</span>
               <p>{{body}}</p>
               <p>By {{user.username}}</p>
            </div>
         </div>
      </div>
   </div>
   {{#each comments as |comment|}}
      <div class='row'>
         <div class='col s12'>
            <div class='card' style='background-color: #717CB470'>
               <div class='card-content white-text'>
                  <p class='right-align'>{{comment.createdAt}}</p>
                  <span class='card-title'>{{comment.body}}</span>
                  <p>By {{comment.user.username}}</p>
               </div>
            </div>
         </div>
      </div>
   {{/each}}
   {{#if logged_in}}
      <div class='row'>
         <div class='col s12'>
            <div class='card' style='background-color: #717CB470'>
               <div class='card-content white-text'>
                  <form action='/comments/create/{{id}}' method='post'>
                     <div class='row'>
                        <div class='input-field col s12'>
                           <textarea id='body' name='body' class='materialize-textarea'></textarea>
                           <label for='body'>Write your comment...</label>
                        </div>
                     </div>
                     <button class='btn waves-effect waves-light' style='background-color: #676E95' type='submit'>Post!</button>
                  </form>
               </div>
            </div>
         </div>
      </div>
   {{else}}
      <div class='row'>
         <div class='col s12'>
            <div class='card' style='background-color: #717CB470'>
               <div class='card-content white-text'>
                  <form action='/login'>
                     <div class='row'>
                        <div class='input-field col s12'>
                           <textarea disabled id='comment' name='comment' class='materialize-textarea'></textarea>
                           <label for='comment'>Please login to comment</label>
                        </div>
                     </div>
                     <button class='btn waves-effect waves-light' style='background-color: #676E95' type='submit'>Login</button>
                  </form>
               </div>
            </div>
         </div>
      </div>
   {{/if}}
</div>